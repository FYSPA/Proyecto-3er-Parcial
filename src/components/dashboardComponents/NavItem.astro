---
interface Props {
  href: string;
  // si pasas un componente .astro
  iconComponent?: any;
  // si pasas una ruta de imagen
  iconSrc?: string;
  iconAlt?: string;
  label: string;
  title: string;
}

const { href, iconComponent: IconComponent, iconSrc, iconAlt, label, title } = Astro.props;
---

<a href={href} class="nav-item" title={title}>
  {IconComponent
    ? <IconComponent />
    : iconSrc
      ? <img src={iconSrc} alt={iconAlt} class="icon" loading="lazy" decoding="async" />
      : null}
  <span class="label">{label}</span>
</a>


<style>
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 0;
    color: #999;
    text-decoration: none;
    transition: color 0.3s ease, background-color 0.3s ease;
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
    width: 100%;
  }

  .nav-item:hover {
    color: #ffffff33;
    background-color: #252525;
  }

  .nav-item.active {
    color: #fff;
    background-color: #252525;
    border-left: 3px solid #25ac29; 
    border-bottom: 1px solid #eeeeee56;
  }

  .nav-item.active:hover {
    background-color: #ffffff1b;
  }

  .icon {
    width: clamp(20px, 2.5vw, 24px);
    height: clamp(20px, 2.5vw, 24px);
    aspect-ratio: 1 / 1;
    object-fit: contain;
    object-position: center;
    display: block;
  }

  .label {
    font-size: 0.65rem;
    text-align: center;
    max-width: 70px;
    word-break: break-word;
    color: inherit;
  }

  /* Tooltip al pasar el mouse */
  .nav-item::before {
    content: attr(title);
    position: absolute;
    left: 100%;
    margin-left: 0.5rem;
    background-color: #333;
    color: #fff;
    padding: 0.5rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 1001;
  }

  .nav-item:hover::before {
    opacity: 1;
  }

  body.modo-claro .nav-item:hover {
    background-color: #e0e0e0;
    color: #333;
  }

  body.modo-claro .nav-item.active {
    color: #333;
    background-color: #e0e0e0;
    border-left-color: #4CAF50;
  }

  body.modo-claro .nav-item::before {
    background-color: #ddd;
    color: #333;
  }

  @media (max-width: 768px) {
    .label {
      font-size: 0.6rem;
      max-width: 60px;
    }

    .icon { width: 20px; height: 20px; }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-item, .nav-item::before { transition: none; }
  }
</style>
