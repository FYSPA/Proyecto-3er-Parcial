---
// src/components/Header.astro
import SunAnimated from "@components/icons/SunAnimated.astro"
import MoonAnimated from "@components/icons/MoonAnimated.astro"
import GlobeAnimated from "@components/icons/GlobeAnimated.astro";
import SettingsAnimated from "@components/icons/SettingsAnimated.astro"
import '@styles/global-color-scheame.css'
---

<header>
  <div class="header-content">
    <div class="izquierda-header">
      <span>Hola</span>
      <span class="user-name" id="userGreeting">(User)</span>
    </div>

    <div class="derecha-header">
      <GlobeAnimated />
      <button id="modoLecturaBtn" class="btn-tema" title="Cambiar tema">
        <div id="moonIcon">
          <MoonAnimated />
        </div>
        <div id="sunIcon">
          <SunAnimated />
        </div>
      </button>
      <SettingsAnimated />
      <div class="user-circle" id="userAvatar" title="Perfil de usuario">
        <img class="avatar-img" id="avatarImg" src="http://localhost:8000/uploads/avatars/user_XXXX.jpg" ...>
      </div>
    </div>
  </div>
</header>

<style>
  header {
    background-color: #1a1a1a;
    height: 70px;
    display: flex;
    align-items: center;
    width: calc(100% - 80px);
    position: fixed;
    top: 0;
    left: 80px;
    right: 0;
    z-index: 100;
    transition: background-color 0.3s ease;
    border-bottom: 1px solid #333;
  }

  body.modo-claro header {
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
  }

  body.modo-oscuro header {
    background-color: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 0 2rem;
  }

  .izquierda-header {
    flex: 1;
    flex-direction: row;
    display: flex;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }
  .izquierda-header span {
    font-size: 1rem;
    font-weight: 500;
    color: #fff;
    transition: color 0.3s ease;
  }

  body.modo-claro .izquierda-header span {
    color: #333;
  }

  .derecha-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-shrink: 0;
  }

  .btn-tema {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    padding: 0;
  }

  .btn-tema:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  body.modo-claro .btn-tema:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .user-circle {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    background: #4CAF50;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 50%;
    background: #4CAF50;
    display: block;
  }


  .user-name {
    max-width: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: block;
    text-transform: lowercase;
    
  }


</style>

<script type="module" src="/scripts/color-scheme.js"></script>

<script is:inline>
  // Cargar datos del usuario desde sessionStorage o localStorage
  function cargarDatosUsuario() {
    let userName = sessionStorage.getItem('user_nombre') || localStorage.getItem('user_nombre');
    let userPhoto = sessionStorage.getItem('user_photo') || localStorage.getItem('user_photo');
    const greeting = document.getElementById('userGreeting');
    const avatarImg = document.getElementById('avatarImg');

    if (greeting && userName) {
      greeting.textContent = `${userName}`;
    }

    // Fallback universal de avatar
    if (avatarImg) {
      function setAvatarIniciales() {
        if (userName) {
          const initials = userName.split(' ').map(n => n[0]).join('');
          avatarImg.src = `https://ui-avatars.com/api/?name=${initials}&background=4CAF50&color=fff&font-size=0.4&bold=true`;
        } else {
          avatarImg.src = `https://ui-avatars.com/api/?name=User&background=4CAF50&color=fff&font-size=0.4&bold=true`;
        }
      }

      if (userPhoto && userPhoto !== 'null') {
        if (userPhoto.startsWith('/uploads/')) {
          avatarImg.src = `http://localhost:8000${userPhoto}`;
        } else {
          avatarImg.src = userPhoto;
        }
        avatarImg.onerror = function () {
          setAvatarIniciales();
        };
      } else {
        setAvatarIniciales();
      }
    }
  }

  // Ejecutar cuando el DOM est√© listo
  document.addEventListener('DOMContentLoaded', cargarDatosUsuario);
  cargarDatosUsuario();

</script>
