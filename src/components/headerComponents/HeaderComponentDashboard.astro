---
// src/components/Header.astro
import SunAnimated from "@components/icons/SunAnimated.astro"
import MoonAnimated from "@components/icons/MoonAnimated.astro"
---

<header>
  <div class="header-content">
    <div class="izquierda-header">
      <span>Hola (User)</span>
    </div>

    <div class="derecha-header">
      <div class="user-circle">
        <img src="https://ui-avatars.com/api/?name=User&background=4CAF50&color=fff" alt="Avatar User" class="avatar-img">
      </div>
      <button id="modoLecturaBtn" class="btn-tema" title="Cambiar tema">
        <div id="moonIcon">
          <MoonAnimated />
        </div>
        <div id="sunIcon">
          <SunAnimated />
        </div>
      </button>
    </div>
  </div>
</header>

<style>
  header {
    background-color: #1a1a1a;
    height: 82px;
    display: flex;
    align-items: center;
    width: calc(100% - 80px);
    position: fixed;
    top: 0;
    left: 80px;
    right: 0;
    z-index: 100;
    transition: background-color 0.3s ease;
    border-bottom: 1px solid #333;
  }

  body.modo-claro header {
    background-color: #fff;
    border-bottom: 1px solid #e0e0e0;
  }

  body.modo-oscuro header {
    background-color: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    width: 100%;
    padding: 0 2rem;
  }

  .izquierda-header {
    flex: 1;
    transition: color 0.3s ease;
  }

  .izquierda-header span {
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.3s ease;
    color: #fff;
  }

  body.modo-claro .izquierda-header span {
    color: #333;
  }

  body.modo-oscuro .izquierda-header span {
    color: #fff;
  }

  .derecha-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-shrink: 0;
  }

  .btn-tema {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: background-color 0.3s ease;
    padding: 0;
  }

  .btn-tema:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  body.modo-claro .btn-tema:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .user-circle {
    width: 45px;
    height: 45px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #4CAF50;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

</style>

<script type="module" src="/scripts/color-scheme.js"></script>
