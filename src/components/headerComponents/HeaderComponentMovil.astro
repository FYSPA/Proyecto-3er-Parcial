---
import '@styles/global-fonts.css'
import '@styles/media-quearys/header-movil.css'
---

<!-- HAMBURGUESA (SOLO MÓVILES) -->
<button class="hamburger" id="hamburger" aria-label="Menú">
    <span></span>
    <span></span>
    <span></span>
</button>

<!-- MENÚ MÓVIL (completamente separado) -->
<nav class="nav-mobile" id="navMobile">
    <a href="/aoboutMe">Quiénes Somos</a>
    <a href="/noticias">Noticias</a>
    <a href="/LoginRegisterPages/LoginPage" class="btn-login-mobile">Iniciar Sesión</a>
</nav>

<script type="text/javascript">
    const hamburger = document.getElementById('hamburger');
    const navMobile = document.getElementById('navMobile');

    // Toggle menú al hacer clic en hamburguesa
    hamburger?.addEventListener('click', () => {
        hamburger.classList.toggle('active');
        navMobile.classList.toggle('active');
    });

    // Cerrar menú al hacer clic en un link
    navMobile?.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
            hamburger.classList.remove('active');
            navMobile.classList.remove('active');
        });
    });

    // Cerrar menú si se hace clic fuera
    document.addEventListener('click', (e) => {
        if (!e.target.closest('button') && !e.target.closest('.nav-mobile')) {
            hamburger?.classList.remove('active');
            navMobile?.classList.remove('active');
        }
    });
</script>
