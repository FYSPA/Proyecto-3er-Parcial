<body>
    <div id="google_translate_element"></div>
    <div id="menu-idiomas" class="menu-opciones">
        <a href="#" class="lang-link" data-lang="es">Español</a>
        <a href="#" class="lang-link" data-lang="en">English</a>
        <a href="#" class="lang-link" data-lang="fr">Français</a>
        <a href="#" class="lang-link" data-lang="it">Italiano</a>
        <a href="#" class="lang-link" data-lang="de">Deutsch</a>
        <a href="#" class="lang-link" data-lang="pt">Português</a>
    </div>
    <button id="btn-globo">
        <svg
            class="icon-tema"
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
        >
            <g
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
            >
                <!-- Animar el círculo principal -->
                <circle
                    cx="12"
                    cy="12"
                    r="9"
                    stroke-dasharray="56.52"
                    stroke-dashoffset="56.52"
                >
                    <animate
                        attributeName="stroke-dashoffset"
                        from="56.52"
                        to="0"
                        dur="0.5s"
                        fill="freeze"></animate>
                </circle>
                <!-- Animar las líneas horizontales -->
                <path
                    stroke-dasharray="22"
                    stroke-dashoffset="22"
                    d="M3.6 15h16.8"
                >
                    <animate
                        attributeName="stroke-dashoffset"
                        from="22"
                        to="0"
                        dur="0.3s"
                        begin="0.5s"
                        fill="freeze"></animate>
                </path>
                <path
                    stroke-dasharray="22"
                    stroke-dashoffset="22"
                    d="M3.6 9h16.8"
                >
                    <animate
                        attributeName="stroke-dashoffset"
                        from="22"
                        to="0"
                        dur="0.3s"
                        begin="0.8s"
                        fill="freeze"></animate>
                </path>
                <!-- Animar los meridianos -->
                <path
                    stroke-dasharray="18"
                    stroke-dashoffset="18"
                    d="M11.5 3a17 17 0 0 0 0 18"
                >
                    <animate
                        attributeName="stroke-dashoffset"
                        from="18"
                        to="0"
                        dur="0.4s"
                        begin="1.1s"
                        fill="freeze"></animate>
                </path>
                <path
                    stroke-dasharray="18"
                    stroke-dashoffset="18"
                    d="M12.5 3a17 17 0 0 1 0 18"
                >
                    <animate
                        attributeName="stroke-dashoffset"
                        from="18"
                        to="0"
                        dur="0.4s"
                        begin="1.3s"
                        fill="freeze"></animate>
                </path>
            </g>
        </svg>

    </button>

    <!-- ESTILOS -->
    <style>
        button {
            background-color: transparent;
            border: none;
            position: relative;
            cursor: pointer;
        }
        button#btn-globo {
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        button#btn-globo:hover {
            opacity: 0.8;
        }
        button#btn-globo svg {
            width: 24px;
            height: 24px;
        }

        .menu-opciones {
            display: none;
            position: absolute;
            top: 40px;
            right: 370px;
            background: #222;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
            z-index: 99;
            min-width: 120px;
            height: 250px;
            padding: 8px 0;
        }

        .menu-opciones .lang-link {
            display: block;
            color: #fff !important;
            background: transparent !important;
            border: none !important;
            padding: 10px 18px !important;
            font-size: 15px !important;
            cursor: pointer !important;
            width: 100% !important;
            box-sizing: border-box !important;
            transition: background 0.2s;
            text-decoration: none;
        }
        .menu-opciones .lang-link:hover {
            background: #444 !important;
        }

        #google_translate_element {
            position: absolute !important;
            top: -9999px !important;
            left: -9999px !important;
            height: 1px !important;
            width: 1px !important;
            overflow: hidden !important;
            opacity: 0 !important;
            visibility: hidden !important;
        }

        .goog-te-banner-frame,
        .goog-te-menu-frame,
        .skiptranslate {
            display: none !important;
        }

        body {
            top: 0 !important;
        }
    </style>

    <script type="module" src="/scripts/menu-idiomas.js"></script>
</body>
</body>
