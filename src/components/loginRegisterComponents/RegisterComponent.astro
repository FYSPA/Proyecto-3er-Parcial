        ---
import '@styles/global-fonts.css'
import GoogleIcon from "@components/icons/GoogleIcon.astro"
import SunAnimated from "@components/icons/SunAnimated.astro"
import MoonAnimated from "@components/icons/MoonAnimated.astro"
import BackAnimated from "@components/icons/BackAnimated.astro"
import '@styles/media-quearys/login-media-queary.css'
---
<body>
    <main>
        <h1 class="title">Registrate</h1>
        <form id="registerForm" class="input-div">
            <div class="seccion-utils">
                <a href="/mainPage">
                    <button class="btn-back" type="button">
                        <BackAnimated />
                    </button>
                </a>
                <button id="modoLecturaBtn" type="button">
                    <div id="moonIcon">
                        <MoonAnimated />
                    </div>
                    <div id="sunIcon" style="display: none;">
                        <SunAnimated />
                    </div>
                </button>
            </div>
            
            <label for="name">Nombre</label>
            <input type="text" name="nombre" id="name" required>
            
            <label for="email">Email</label>
            <input type="email" name="correo" id="email" required>
            
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
            
            <div id="errorDiv" style="display: none; background: #ffebee; color: #c62828; padding: 10px; border-radius: 5px; margin: 10px 0; font-size: 12px;"></div>
            <div id="loadingDiv" style="display: none; text-align: center; color: #667eea; margin: 10px 0;">Registrando...</div>
            
            <span class="">Â¿Ya tienes cuenta? <a href="/LoginRegisterPages/LoginPage">Inicia SesiÃ³n</a></span>
            <span style="text-align: center; margin-top: 20px; font-weight: bold;">Registrate con Aplicaciones</span>
            
            <button class="btn-google" type="button">
                <span class="google-logo">
                    <GoogleIcon />
                </span>
                <span class="google-text">Google</span>
            </button>
            
            <button class="btn-login" type="submit" id="submitBtn">Registrate</button>
        </form>
    </main>

    <style>
        .title{
            position: relative;
            top: 30px;
        }
        .btn-google {
            margin-top: 10px;
            height: 35px;
            border-radius: 10px;
            box-shadow: 10px 10px 34px 0px rgba(2, 9, 109, 0.75);
            -webkit-box-shadow: 10px 10px 34px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 34px 0px rgba(0,0,0,0.75);
            background-color: transparent;
            color: white;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
        }
        .google-text {
            opacity: 0;
            transition:
                opacity 0.18s 0.12s,
                transform 0.36s cubic-bezier(.45,1.6,.7,1);
            white-space: nowrap;
            color: white;
            margin-left: 8px;
            pointer-events: none;
            position: relative;
            left: 5px;
        }
        .google-logo {
            position: relative;
            left: 25px;
        }

        .btn-google:hover .google-logo {
            transform: translateX(-24px);
        }

        .btn-google:hover .google-text {
            opacity: 1;
            transform: translateX(-20px);
            pointer-events: auto;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 80vh;
            font-family: "Consola-regular", sans-serif;
            background: rgba(255, 255, 255, 0.116);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(6.6px);
            -webkit-backdrop-filter: blur(6.6px);
            margin-top: 50px;
            margin-bottom: 50px;
            padding-bottom: 30px;
        }

        .input-div {
            display: flex;
            flex-direction: column;
            padding-left: 40px;
            padding-right: 40px;
        }
        .input-div input {
            width: 400px;
            height: 20px;
            margin-bottom: 20px;
            border: none;
            padding: 10px;
            border-radius: 10px;
            margin-top: 8px;
        }

        a {
            color: #ff0000;
            text-decoration: underline;
        }

        .seccion-utils {
            position:relative;
            top: -70px;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }
        #modoLecturaBtn {
            background-color: rgb(128, 128, 128);
            border: none;
            border-radius: 20px;
            height: auto;
            width: 50px;
            padding: 10px;
            cursor: pointer;
        }

        .btn-back {
            background-color: rgb(128, 128, 128);
            border: none;
            border-radius: 20px;
            height: auto;
            width: 50px;
            padding: 10px;
            cursor: pointer;
        }

        .btn-login {
            margin-top: 30px;
            height: 35px;
            border-radius: 10px;
            box-shadow: 10px 10px 34px 0px rgba(2, 9, 109, 0.75);
            -webkit-box-shadow: 10px 10px 34px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 34px 0px rgba(0,0,0,0.75);
            background-color: transparent;
            color: white;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            font-size: 20px;
        }

        .btn-login:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>

    <script is:inline>
        function initRegister() {
            const form = document.getElementById('registerForm');
            if (!form) return;

            console.log('âœ… Formulario encontrado');

            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const nombre = form.querySelector('input[name="nombre"]').value;
                const correo = form.querySelector('input[name="correo"]').value;
                const password = form.querySelector('input[name="password"]').value;

                console.log('ðŸ“¤ Datos:', { nombre, correo, password });
                console.log('ðŸŒ Host:', window.location.hostname);

                const apiHost = window.location.hostname === 'localhost' 
                    ? 'http://localhost:8000'
                    : `http://${window.location.hostname}:8000`;

                console.log('ðŸ“¡ API Host:', apiHost);

                // Crear FormData CORRECTAMENTE
                const fd = new FormData();
                fd.append('nombre', nombre);
                fd.append('correo', correo);
                fd.append('password', password);
                fd.append('host_frontend', window.location.hostname);

                console.log('âœ… FormData creado con host:', window.location.hostname);

                try {
                    const res = await fetch(apiHost + '/registro.php', {
                        method: 'POST',
                        body: fd
                    });

                    console.log('Status:', res.status);
                    const json = await res.json();
                    console.log('Respuesta:', json);

                    if (json.success) {
                        console.log('âœ… Ã‰xito! Yendo a verificaciÃ³n...');
                        
                        const verifUrl = apiHost.replace(':8000', '') + ':8000/login_qr.php?code=' + json.codigo_acceso;
                        console.log('ðŸ“ URL verificaciÃ³n:', verifUrl);
                        
                        setTimeout(() => {
                            window.location.href = apiHost + '/verificacion.php';
                        }, 500);
                    } else {
                        console.error('Error:', json.message);
                        alert(json.message || 'Error');
                    }
                } catch (err) {
                    console.error('Error:', err);
                    alert('Error: ' + err.message);
                }
            });
        }

        if (document.getElementById('registerForm')) {
            initRegister();
        } else {
            document.addEventListener('astro:page-load', initRegister);
        }
    </script>






    <script type="module" src="/scripts/color-scheame.js"></script>
</body>
