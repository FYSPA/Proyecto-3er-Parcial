---
import "@styles/global-fonts.css";
import GoogleIcon from "@components/icons/GoogleIcon.astro";
import GlobeAnimated from "@components/icons/GlobeAnimated.astro";
import BackAnimated from "@components/icons/BackAnimated.astro";
import "@styles/media-quearys/login-media-queary.css";
---

<body>
    <main>
        <h1 class="title">Registrate</h1>
        <form id="registerForm" class="input-div">
            <div class="seccion-utils">
                <a href="/mainPage">
                    <button class="btn-back" type="button">
                        <BackAnimated />
                    </button>
                </a>
                <div class="btn-globe">
                    <GlobeAnimated />
                </div>
            </div>

            <label for="name">Nombre</label>
            <input type="text" name="nombre" id="name" required />

            <label for="email">Email</label>
            <input type="email" name="correo" id="email" required />

            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />

            <div
                id="errorDiv"
                style="display: none; background: #ffebee; color: #c62828; padding: 10px; border-radius: 5px; margin: 10px 0; font-size: 12px;"
            >
            </div>
            <div
                id="loadingDiv"
                style="display: none; text-align: center; color: #667eea; margin: 10px 0;"
            >
                Registrando...
            </div>

            <span class=""
                >¿Ya tienes cuenta? <a href="/LoginRegisterPages/loginPage"
                    >Inicia Sesión</a
                ></span
            >
            <span
                style="text-align: center; margin-top: 20px; font-weight: bold;"
                >Registrate con Aplicaciones</span
            >

            <button class="btn-google" type="button" id="btn-google">
                <span class="google-logo">
                    <GoogleIcon />
                </span>
                <span class="google-text">Google</span>
            </button>

            <button class="btn-login" type="submit" id="submitBtn"
                >Registrate</button
            >
        </form>
        <div
            id="g_id_onload"
            data-client_id="173744872751-9mrennmah063ulu8mn2c3m4n875rb1j7.apps.googleusercontent.com"
            data-callback="handleCredentialResponse"
            data-auto_prompt="false"
        >
        </div>
        <div class="g_id_signin" data-type="standard"></div>
    </main>

    <style>
        .title {
            position: relative;
            top: 30px;
        }
        .btn-google {
            margin-top: 10px;
            height: 35px;
            border-radius: 10px;
            box-shadow: 10px 10px 34px 0px rgba(2, 9, 109, 0.75);
            -webkit-box-shadow: 10px 10px 34px 0px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 10px 10px 34px 0px rgba(0, 0, 0, 0.75);
            background-color: transparent;
            color: white;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
        }
        .google-text {
            opacity: 0;
            transition:
                opacity 0.18s 0.12s,
                transform 0.36s cubic-bezier(0.45, 1.6, 0.7, 1);
            white-space: nowrap;
            color: white;
            margin-left: 8px;
            pointer-events: none;
            position: relative;
            left: 5px;
        }
        .google-logo {
            position: relative;
            left: 25px;
        }

        .btn-google:hover .google-logo {
            transform: translateX(-24px);
        }

        .btn-google:hover .google-text {
            opacity: 1;
            transform: translateX(-20px);
            pointer-events: auto;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 80vh;
            font-family: "Consola-regular", sans-serif;
            background: rgba(255, 255, 255, 0.116);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(6.6px);
            -webkit-backdrop-filter: blur(6.6px);
            margin-top: 50px;
            margin-bottom: 50px;
            padding-bottom: 30px;
        }

        .input-div {
            display: flex;
            flex-direction: column;
            padding-left: 40px;
            padding-right: 40px;
        }
        .input-div input {
            width: 400px;
            height: 20px;
            margin-bottom: 20px;
            border: none;
            padding: 10px;
            border-radius: 10px;
            margin-top: 8px;
        }

        a {
            color: #ff0000;
            text-decoration: underline;
        }

        .seccion-utils {
            position: relative;
            top: -70px;
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .btn-back {
            background-color: rgb(128, 128, 128);
            border: none;
            border-radius: 20px;
            height: auto;
            width: 50px;
            padding: 10px;
            cursor: pointer;
        }

        .btn-globe {
            background-color: rgb(128, 128, 128);
            border: none;
            border-radius: 20px;
            height: auto;
            cursor: pointer;
            display: flex;
            justify-content: center;
            padding: 10px;
        }

        .btn-login {
            margin-top: 30px;
            height: 35px;
            border-radius: 10px;
            box-shadow: 10px 10px 34px 0px rgba(2, 9, 109, 0.75);
            -webkit-box-shadow: 10px 10px 34px 0px rgba(0, 0, 0, 0.75);
            -moz-box-shadow: 10px 10px 34px 0px rgba(0, 0, 0, 0.75);
            background-color: transparent;
            color: white;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 12px;
            font-size: 20px;
        }

        .btn-login:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .g_id_signin {
            display: none !important;
        }
    </style>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <script type="module" src="/scripts/google-login.js"></script>
    <script type="module" src="/scripts/register.js"></script>
</body>
