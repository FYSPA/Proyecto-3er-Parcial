---
import videosSequence from "../../scripts-src/videos.js";
import "@styles/media-quearys/video-section-queary.css";
---

<div class="video-bg">
  <video autoplay muted>
    <source type="video/mp4" />
  </video>
  <div class="overlay"></div>
</div>

<div class="video-spacer"></div>

<script define:vars={{ videos: videosSequence }} is:inline>
  let currentVideoIndex = 0;

  function setupVideoSequence() {
    const video = document.querySelector(".video-bg video");
    if (!video) return;

    const source = video.querySelector("source");
    source.src = videos[0];
    video.load();

    video.addEventListener("timeupdate", () => {
      // Si la duraci√≥n menos el tiempo actual es menor a 1 segundo, cambiar video
      if (video.duration - video.currentTime < 1 && video.duration > 0) {
        currentVideoIndex++;
        if (currentVideoIndex >= videos.length) {
          currentVideoIndex = 0;
        }

        source.src = videos[currentVideoIndex];
        video.load();
        video.play();
      }
    });
  }

  document.addEventListener("DOMContentLoaded", setupVideoSequence);
  document.addEventListener("astro:page-load", setupVideoSequence);
</script>

<style>
  .video-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
    margin-bottom: 24px;
  }
  .video-spacer {
    width: 100%;
    height: 100vh;
  }
  .video-bg video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-bg .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.35),
      rgba(0, 0, 0, 0.15) 40%,
      rgba(0, 0, 0, 0)
    );
    pointer-events: none;
  }
</style>
