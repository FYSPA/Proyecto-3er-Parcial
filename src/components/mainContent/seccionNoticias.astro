<div class="container" id="noticias">
    <section class="news-section">
        <h2>Noticias</h2>
        <div class="news-main-article">
            <img
                src="/gamesImg/NewsCrucibleLamentBanner.png"
                alt="Noticia principal"
            />
            <div class="news-info">
                <p class="news-relevance">Noticia más relevante a mostrar</p>
                <a href="#" class="news-link">Link de la noticia</a>
            </div>
        </div>
        <div class="news-sidebar">
            <div class="news-sidebar-item">
                <img
                    src="/gamesImg/NewsEchosOfContentionBanner.png"
                    alt="Noticia secundaria"
                />
                <div class="news-sidebar-content">
                    <h3>Version 1.5 de Echos of Contention</h3>
                    <a href="#" class="news-link">Link de la noticia</a>
                </div>
            </div>
            <div class="news-sidebar-item">
                <img
                    src="/gamesImg/NewsVisionlessBanner.png"
                    alt="Noticia secundaria"
                />
                <div class="news-sidebar-content">
                    <h3>Version 1.5 de Visionless</h3>
                    <a href="#" class="news-link">Link de la noticia</a>
                </div>
            </div>
        </div>
    </section>

    <section class="games-section">
        <h2>Nuestros Juegos</h2>
        <div class="games-grid">
            <div class="game-item">
                <figure>
                    <img
                        src="/gamesImg/CrucibleLamentBanner.jpg"
                        alt="Crucible Lament"
                    />
                    <figcaption>Crucible Lament</figcaption>
                </figure>
            </div>
            <div class="game-item">
                <figure>
                    <img
                        src="/gamesImg/EchosOfContentionBanner.jpg"
                        alt="Echos Of Contention"
                    />
                    <figcaption>Echos Of Contention</figcaption>
                </figure>
            </div>
            <div class="game-item">
                <figure>
                    <img
                        src="/gamesImg/VisionlessBanner.jpg"
                        alt="Visionless"
                    />
                    <figcaption>Visionless</figcaption>
                </figure>
            </div>
            <div class="game-item">
                <figure>
                    <img
                        src="/gamesImg/LostInSpaceBanner.png"
                        alt="Lost In Space"
                    />
                    <figcaption>Lost In Space</figcaption>
                </figure>
            </div>
        </div>
    </section>

