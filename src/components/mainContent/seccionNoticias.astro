<style>
    /* Reset básico y estilos generales */
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f8f8f8; /* Un fondo ligero */
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0 20px;
    }

    h2 {
        font-size: 1.8em;
        margin-bottom: 20px;
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
    }

    /* --- Sección de Noticias (MODIFICADA) --- */
    .news-section {
        display: grid;
        /* Definimos explícitamente las dos columnas: 2 partes para la izquierda y 1 para la derecha */
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        margin-bottom: 40px;
    }

    /* Forzamos al artículo principal a ocupar la PRIMERA columna (la de la izquierda) */
    .news-main-article {
        /* Ocupa desde la línea 1 hasta la línea 2 de la cuadrícula, que es la primera columna. */
        grid-column: 1 / 2;
    }

    /* Forzamos a la barra lateral a ocupar la SEGUNDA columna (la de la derecha) */
    .news-sidebar {
        /* Ocupa desde la línea 2 hasta la línea 3, que es la segunda columna. */
        grid-column: 2 / 3;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .news-main-article img {
        width: 100%;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .news-info {
        padding: 10px 0;
    }

    .news-relevance {
        font-size: 1.2em;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .news-link {
        text-decoration: none;
        font-size: 0.9em;
    }

    .news-link:hover {
        text-decoration: underline;
    }

    .news-sidebar-item {
        display: flex;
        gap: 15px;
        background-color: black;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .news-sidebar-item img {
        width: 120px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
    }

    .news-sidebar-content h3 {
        font-size: 1em;
        margin: 0 0 5px 0;
    }

    /* --- Sección Nuestros Juegos --- */
    .games-section {
        margin-bottom: 40px;
    }

    .games-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .game-item {
        border-radius: 1px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .game-item img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        filter: grayscale(100%);
        mix-blend-mode: overlay;
        opacity: 0.8;
        transition:
            mix-blend-mode 2s,
            filter 1s,
            opacity 1s;
        clip-path: polygon(25% 0%, 100% 0%, 75% 100%, 0% 100%);
    }

    .game-item img:hover {
        filter: grayscale(0%);
        mix-blend-mode: screen;
        opacity: 1;
    }

    /* --- Sección Esports --- */
    .esports-section {
        margin-bottom: 40px;
    }

    .esports-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .esports-item {
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .esports-item img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    a {
        color: #024ef3;
    }

    body.modo-oscuro h3 {
        color: rgb(0, 0, 0);
    }

    h3 {
        color: white;
    }

    body.modo-oscuro .news-sidebar-item {
        background-color: rgb(255, 255, 255);
    }
</style>
