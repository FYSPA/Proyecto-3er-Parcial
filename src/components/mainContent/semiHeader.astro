---
import { games } from '../../scripts-src/games-carrusel.js';
import ArrowAnimated from '@components/icons/ArrowAnimated.astro';
import '@styles/global-color-scheame.css'
import '@styles/media-quearys/semi-header-queary.css'
---

<section class="contenedor-main" id="carrusel-juegos">
    <img src={games[0].image} alt={games[0].title}>
    <div class="contenedor-contenido">
        <h1>{games[0].title}</h1>
        <p>{games[0].description}</p>
        <a href={games[0].link} target="_blank" class="contenedor-btn">
            <button class="btn-jugar"><ArrowAnimated />Jugar</button>
        </a>
        
        <!-- Indicadores de slide -->
        <ol class="slide-indicador">
            {games.map((_, index) => (
                <li>
                    <button 
                        class="slide-circulo" 
                        data-slide={index}
                        title={`Ir al juego ${index + 1}`}
                    >
                        â€¢
                    </button>
                </li>
            ))}
        </ol>
        
    </div>
</section>

<style>
    h1 {
        font-size: 70px;
        padding-bottom: 50px;
        margin: 0;
    }
    p {
        white-space: pre-line;
        width: 500px;
        margin: 0;
        font-size: 16px;
    }
    .contenedor-main {
        position: relative;
        z-index: 1;
        border-radius: 10px;
        min-height: 600px;
        width: 100%;
        max-width: 1600px;
        display: flex;
        margin: 45px auto;
        overflow: hidden;
    }

    .contenedor-main img {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        object-fit: cover;
        border-radius: 10px;
        z-index: -10;
    }

    .contenedor-contenido {
        position: relative;
        z-index: 10;
        color: white;
        padding: 150px 50px 0px 50px;
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
    }

    .contenedor-btn {
        width: 180px;
        margin-top: 10px;
    }
    
    .btn-jugar {
        padding: 10px;
        width: 100%;
        height: 60px;
        border: none;
        cursor: pointer;
        border-radius: 24px;
        display: flex;
        text-align: center;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        transition: all 0.3s ease;
        box-shadow: 15px 17px 42px 3px rgba(0,0,0,0.6);
        -webkit-box-shadow: 15px 17px 42px 3px rgba(0,0,0,0.6);
        -moz-box-shadow: 15px 17px 42px 3px rgba(0,0,0,0.6);
        background-color: rgb(37, 37, 155);
        color: white;
        background-color: rgb(37, 37, 155);
        color: white;
        transition: all 0.3s ease, box-shadow 0.25s;
        
    }

    .btn-jugar:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 0 12px #095ebe) drop-shadow(0 0 20px #4efcff);
        transition: filter 0.3s;
    }

    /* Estilos para los indicadores */
    .slide-indicador {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        list-style: none;
        gap: 12px;
        margin: 0;
        padding: 0;
        z-index: 20;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 90%;
    }

    .slide-circulo {
        width: 12px;
        height: 12px;
        border: 2px solid white;
        border-radius: 50%;
        background: transparent;
        cursor: pointer;
        font-size: 20px;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        transition: all 0.3s ease;
    }

    .slide-circulo:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: scale(1.2);
    }

    .slide-circulo.active {
        background: white;
        color: rgb(0, 0, 0);
    }

</style>

<script is:inline define:vars={{ games }}>
  let current = 0;
  const total = games.length;
  let autoplayInterval;

  function actualizarCarrusel() {
    document.querySelector('.contenedor-main img').src = games[current].image;
    document.querySelector('.contenedor-main img').alt = games[current].title;
    document.querySelector('.contenedor-contenido h1').textContent = games[current].title;
    document.querySelector('.contenedor-contenido p').textContent = games[current].description;
    document.querySelector('.contenedor-contenido a').href = games[current].link;
    
    actualizarIndicadores();
  }

  function actualizarIndicadores() {
    document.querySelectorAll('.slide-circulo').forEach(btn => {
        btn.classList.remove('active');
    });
    
    const btnActivo = document.querySelector(`[data-slide="${current}"]`);
    if (btnActivo) {
        btnActivo.classList.add('active');
    }
  }

  function resetearAutoplay() {
    clearInterval(autoplayInterval);
    
    autoplayInterval = setInterval(() => {
      current = (current + 1) % total;
      actualizarCarrusel();
    }, 5000);
  }

  window.anterior = function () {
    current = (current - 1 + total) % total;
    actualizarCarrusel();
    resetearAutoplay();
  };

  window.siguiente = function () {
    current = (current + 1) % total;
    actualizarCarrusel();
    resetearAutoplay();
  };

  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.slide-circulo').forEach(btn => {
      btn.addEventListener('click', function() {
        const index = parseInt(this.getAttribute('data-slide'));
        current = index;
        actualizarCarrusel();
        resetearAutoplay();
        
        document.getElementById('carrusel-juegos').scrollIntoView({ 
          behavior: 'smooth', 
          block: 'center' 
        });
      });
    });
  });

  actualizarIndicadores();
  resetearAutoplay();
</script>
