<style>
    .about-section {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    h1 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2.5rem;
    }
    .people-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }
    .person-card {
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #eee;
        background-color: var(--card-bg, #fff);
        color: var(--text-color, inherit);
    }

    h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }
    summary {
        cursor: pointer;
        font-weight: bold;
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        background-color: rgba(0, 0, 0, 0.05);
        border-radius: 4px;
    }
    details[open] summary {
        margin-bottom: 1rem;
    }

    /* Dark mode adjustments based on Layout class */
    :global(.modo-oscuro) .person-card {
        background-color: #2a2a2a;
        border-color: #444;
        color: #fff;
    }
    :global(.modo-oscuro) summary {
        background-color: rgba(255, 255, 255, 0.1);
    }
</style>
