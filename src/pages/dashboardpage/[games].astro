---
// src/pages/dashboardpage/[games].astro
import LayoutGames from "@layouts/LayoutGames.astro";
import { games } from "./gameData.js";
import Footer from "@components/footerComponents/Footer.astro";
import "@styles/media-quearys/games-queary.css";

export async function getStaticPaths() {
    return games.map((game) => ({
        params: { games: game.ruta },
        props: { game },
    }));
}

const { games: gameParam } = Astro.params;
const { game: propGame } = Astro.props;

const currentGame = propGame || games.find((g) => g.ruta === gameParam);

// Si no encuentra el juego, lanza error (página 404)
if (!currentGame) {
    throw new Error(`Juego no encontrado: ${gameParam}`);
}
---

<LayoutGames>
    <section class="section-top">
        <!-- Fondo (iconSrc) va primero en el DOM o posicionado absolutamente detrás -->
        <div class="fondo">
            {
                currentGame.tipoIcono === "image" && (
                    <img src={currentGame.iconSrc} alt={currentGame.titulo} />
                )
            }
        </div>

        <!-- Icono principal (iconGame) va encima -->
        <div class="icon">
            {
                currentGame.tipoIcono === "image" && (
                    <img src={currentGame.iconGame} alt={currentGame.titulo} />
                )
            }
        </div>

        <div class="button">
            <button id="buy-btn">Descargar</button>
        </div>
    </section>

    <section class="section-midle">
        <span class="title-game">{currentGame.titulo}</span>
        <p class="description-game">{currentGame.description}</p>
        <div class="container-img-game">
            <img
                class="img-game"
                src={currentGame.imgGame}
                alt={currentGame.titulo}
            />
        </div>
    </section>

    <section class="section-bottom">
        <span class="requeriments-title">
            Requerimientos
            <div class="line"></div>
        </span>
        <div class="requeriments">
            <div class="requeriments-lows">
                <span>Requerimientos Mínimos</span>
                <ul>
                    {
                        currentGame.requererimentsLows &&
                            currentGame.requererimentsLows
                                .split(",")
                                .map((req) => <li>{req.trim()}</li>)
                    }
                </ul>
            </div>
            <div class="requeriments-high">
                <span>Requerimientos Recomendados</span>
                <ul>
                    {
                        currentGame.requererimentsHigh &&
                            currentGame.requererimentsHigh
                                .split(",")
                                .map((req) => <li>{req.trim()}</li>)
                    }
                </ul>
            </div>
        </div>
    </section>
    <Footer />
    <canvas id="purchase-particles"></canvas>
</LayoutGames>

<style>
    .section-top {
        position: relative;
        width: 100%;
        height: 600px; /* Altura fija para el contenedor */
        overflow: hidden;
        display: flex;
    }

    .title-game {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
        padding-bottom: 1rem;
    }
    .description-game {
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
    .fondo {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .fondo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.6);
    }

    .icon {
        position: relative;
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .button {
        position: relative;
        top: 40%;
        left: 11%;
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .button button {
        padding: 20px 90px;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition-duration: 0.9s background-color ease;
    }

    .button button:hover {
        background-color: #4caf50;
    }
    .icon img {
        object-fit: contain;
        height: 500px;
        width: 500px;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.5));
    }
    .section-midle {
        margin: 30px;
        display: flex;
        flex-direction: column;
    }
    .container-img-game {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .img-game {
        width: 20%;
        height: 20%;
        object-fit: cover;
        border-radius: 10px;
        border: 2px solid #ffffff;
    }
    .section-bottom {
        display: flex;
        min-width: 50%;
        width: 30%;
        margin: 0 auto;
        padding-bottom: 70px;
        flex-direction: column;
    }

    .requeriments {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }
    .requeriments-title {
        font-size: 1.3rem;
        position: relative;
        left: 13%;
    }

    .line {
        position: relative;
        left: 18%;
        top: -10px;
        width: 56%;
        height: 1px;
        background-color: #ffffff;
    }

    .section-bottom span {
        font-size: 1.3rem;
    }

    .section-bottom ul {
        list-style-type: none;
        padding: 0;
    }
    .section-bottom li {
        padding-bottom: 1rem;
    }
    .requeriments-lows {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 30px;
        border-right: 1px solid #ffffff;
    }
    .requeriments-high {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 30px;
        border-left: 1px solid #ffffff;
    }

    #purchase-particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 9999;
        opacity: 0;
        transition: opacity 0.5s ease;
    }
</style>

<script>
    import { initPurchaseInteraction } from "../../scripts-src/purchaseInteraction.js";

    function initScrollEffect() {
        const fondoImg = document.querySelector(".fondo img");
        const sectionTop = document.querySelector(".section-top");

        if (fondoImg && sectionTop) {
            const handleScroll = () => {
                const scrollY = window.scrollY;
                const sectionHeight = sectionTop.clientHeight;

                // Calculate opacity: 1 at top, 0 when scrolled past section
                let opacity = 1 - scrollY / sectionHeight;

                // Clamp opacity between 0 and 1
                opacity = Math.max(0, Math.min(1, opacity));

                if (fondoImg instanceof HTMLElement) {
                    fondoImg.style.opacity = opacity.toString();
                }
            };

            window.addEventListener("scroll", handleScroll);
            // Initial check
            handleScroll();
        }
    }

    // Run on load
    initScrollEffect();
    initPurchaseInteraction();

    // If using Astro View Transitions
    document.addEventListener("astro:after-swap", initScrollEffect);
    document.addEventListener("astro:after-swap", initPurchaseInteraction);
</script>
