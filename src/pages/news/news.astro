<style>
    .container {
        max-width: 950px;
        margin: 0 auto 40px auto;
        background: #fff;
        padding: 36px 32px;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(44, 62, 80, 0.1);
    }
    .noticia {
        border-bottom: 1px solid #e3e3e3;
        padding: 28px 0;
        display: flex;
        gap: 28px;
        align-items: flex-start;
        transition: background 0.2s;
    }
    .noticia:hover {
        background: #f6faff;
    }
    .noticia:last-child {
        border-bottom: none;
    }
    .noticia img {
        width: 190px;
        height: 120px;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.1);
        flex-shrink: 0;
    }
    .noticia-info {
        flex: 1;
    }
    .fecha {
        color: #6c7a89;
        font-size: 1em;
        margin-bottom: 10px;
        font-weight: 500;
    }
    h2 {
        color: #2c3e50;
        margin: 0 0 10px 0;
        font-size: 1.5em;
        transition: color 0.2s;
    }
    .noticia:hover h2 {
        color: #2980b9;
    }
    .noticia-info p {
        color: #444;
        margin: 0;
        line-height: 1.6;
    }
    @media (max-width: 700px) {
        .container {
            padding: 12px 4vw;
        }
        .noticia {
            flex-direction: column;
            gap: 16px;
            padding: 18px 0;
        }
        .noticia img {
            width: 100%;
            height: 180px;
        }
    }
</style>
